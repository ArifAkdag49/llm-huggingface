def process_query(query):
    if 'performance score' in query.lower():
        result = df[['text']].to_dict(orient='records') # type: ignore
        return result
    elif 'department' in query.lower():
        department = query.split("department ")[-1]
        result = df[df['text'].str.contains(department, case=False)].to_dict(orient='records') # type: ignore
        return result
    else:
        
        return "Query not recognized."
